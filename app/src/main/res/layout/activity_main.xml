<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.charlie.dialogtest.MainActivity">

    <Button
        android:id="@+id/showDialogBtn"
        android:text="커스텀 다이얼로그 생성"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        />


    <EditText
        android:id="@+id/nameEt"
        android:textColor="#000"
        android:hint="이름"
        android:textColorHint="#51000000"
        android:layout_centerInParent="true"
        android:layout_above="@id/showDialogBtn"
        android:paddingLeft="8dp"
        android:layout_width="match_parent"
        android:layout_marginLeft="48dp"
        android:layout_marginRight="48dp"
        android:layout_height="wrap_content" />


    <TextView
        android:id="@+id/resultNameTv"
        android:textSize="24dp"
        android:gravity="center"
        android:layout_margin="24dp"
        android:layout_below="@id/showDialogBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/resultEmailTv"
        android:textSize="24dp"
        android:gravity="center"
        android:layout_margin="24dp"
        android:layout_below="@id/resultNameTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</RelativeLayout>
